@{
    ViewData["Title"] = "Home Page";
    bool isLoggedIn = (bool)ViewData["IsLoggedIn"];
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (isLoggedIn)
    {
        <p>Logged in</p>
    }
    else
    {
        <div class="d-flex gap-2 justify-content-center">
            <button class="btn btn-primary">
                <a class="text-white text-decoration-none" asp-controller="User" asp-action="Login">Login</a>
            </button>
            <button class="btn btn-secondary">
                <a class="text-white text-decoration-none" asp-controller="User" asp-action="Register">Register</a>
            </button>
        </div>
    }
</div>